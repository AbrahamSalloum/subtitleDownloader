<Window x:Class="subsl.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:subsl"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <StackPanel >
                        <TextBlock Text="Username" />
                        <TextBox  Name="UsernameBox" />
                    </StackPanel >
                    <StackPanel>
                        <TextBlock Text="Password" />
                        <PasswordBox Name="PasswordBox" />
                    </StackPanel>
                    <StackPanel >
                        <TextBlock Text="Consumer Key" />
                        <TextBox  Name="ConsumerKeyBox" Text="TysOzs9PT8JdKBx1srl3QQMcrMAoPBm3"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <Button Name="login" Click="login_Click">Login</Button>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</Window>
